  <body>
    <div class="container">
      <%- include ('partials/navbar.ejs') %>
      <div class="row" style="align-items: flex-start; justify-content: center">
        <div>
          <h1 class="feedback-form-title">Leave us some feedback!</h1>
          <form
            class="feedback-form-container"
            action="/feedback"
            method="POST"
          >
            <label for="feedback-name">Name</label>
            <input
              type="text"
              class="form-control"
              id="feedback-form-name"
              name="name"
              placeholder="Enter your name"
            />
            <label for="feedback-bias">Bias?</label>
            <input
              type="text"
              class="form-control"
              id="feedback-form-bias"
              name="bias"
              placeholder="Who's your bias?"
            />
            <label for="feedback-comment">Comment</label>
            <textarea
              type="text"
              placeholder="Enter your message, then hit the submit"
              class="form-control"
              id="feedback-form-message"
              name="message"
              rows="6"
            ></textarea>
            <button type="submit" class="btn btn-default pull-right">
              Submit
            </button>
          </form>
