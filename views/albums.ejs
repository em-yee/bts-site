<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BTS</title>
  <%- include('partials/stylesheets.ejs') %>
  <script src="public/js/index.js" type="module"></script>
</head>

<body>
  <%- include('partials/navbar.ejs') %>
  <div class="background" style="background-image: url('/public/images/background.png')">
    <div class="container">
      <h1 style="margin-top: 0;">DISCOGRAPHY</h1>
      <div class="albums-container">
        <% if (json) { %>
        <span id="album-data" data-attr-value="<%= json; %>"></span>
        <% } %>
        <% if (data) { %> <% for (let i = 0; i < data.length; i++ ) {
            %>
        <div class="album-item" id="album-<%= i %>">
          <img src="/public/images/<%= data[i].artwork[0]; %>" alt="<%= data[i].shortname; %>" draggable="false" />
        </div>
        <div class="album-modal" id="modal-<%= i %>">
          <div class="overlay"></div>
          <div class="modal-content">
            <div class="row" style="margin: 0.8rem 0">
              <span class="album-name"><%- data[i].albumname %></span>
            </div>
            <div class="row" style="
                  align-items: flex-start;
                  justify-content: flex-start;
                  padding: 1rem 0;
                ">
              <div class="album-cover-wrapper">
                <div class="album-cover" style="
                                        background-image: url('/public/images/<%= data[i].artwork[0] %>');
                                        "></div>
              </div>
              <div class="track-list"><%- data[i].tracklist %></div>
            </div>
            <div class="row" style="
                  align-items: center;
                  justify-content: center;
                  flex-direction: column;
                  padding: 1rem 0 0.2rem 0;
                ">
              <h4 style="width: 100%; text-align: left; font-weight: bold">
                Summary
              </h4>
              <p><%- data[i].summary %></p>
            </div>
            <div class="row" style="
                  align-items: center;
                  justify-content: center;
                  padding: 0.4rem 0;
                ">
              <a href="<%= data[i].mv %>">Watch Music Video</a>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <% } else { %>
      <p>has no data</p>
      <% } %>
    </div>
    <%- include('partials/footer.ejs') %>
  </div>

  <%- include('partials/scripts.ejs') %>
</body>

</html>
